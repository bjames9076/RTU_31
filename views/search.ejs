 <script>
           $(document).ready(function() {
      
      
      var $newJobInput = $("input.new-job");
      // Adding event listeners 
      $(document).on("submit", "#user-form", findJob);
      // This function sarches for a job
      function findJob(event) {
        
        
        var user = {
          jobSearch: $newJobInput.val().trim()
        };
    
        $.post("/search", user);
        $newJobInput.val("");
        location.reload();
      }
    });
           

        
      </script>


