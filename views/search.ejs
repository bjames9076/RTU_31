                    <i class="red-text material-icons prefix">search</i>
                    <input type="text" placeholder="Search" class="autocomplete red-text">
                  </div>
                </div>
              </div>
            </div>
          </li>
          <li>
            <a href="/account" class="red-text">Account </a>
          </li>
