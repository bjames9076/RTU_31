<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Right to You!</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">


</head>
<body class="grey paddingtop">
<div class="container main">

<div class="row">
    <div class="col s6 offset-s3 borderclass grey darken-1 z-depth-5">

    <h1 class= "center-align white-text thin"><span class="fa fa-sign-in"></span> Signup</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="red-text center-align"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label class="thin white-text">Email</label>
            <input type="text" placeholder="example@example.com" class="form-control grey-text text-darken-3 line" name="email">
        </div>
        <div class="form-group">
            <label class="thin white-text">Password</label>
            <input type="password" placeholder="..." class="form-control grey-text text-darken-3 line" name="password">
        </div>

        <button type="submit"class="btn center-align grey darken-3 thin">Signup</button>
    </form>

    

    <p class="white-text">Already have an account? <a class="red-text text-lighten-1" href="/login">Login</a></p>
    <p class="white-text">Or go <a class="red-text text-lighten-1" href="/">home</a>.</p>

</div>

</div>
</div>

