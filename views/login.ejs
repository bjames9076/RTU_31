<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>Right to You!</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">


</head>
<body class="grey">
<div class="container main">

<div class="row">
    <div class="col s6 offset-s3">
    <h1 class="center-align thin white-text"><span class="fa fa-sign-in"></span> Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label class="white-text">Email</label>
            <input placeholder="example@example.com" type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label class="white-text">Password</label>
            <input placeholder="..."type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn center-align grey darken-3">Login</button>
    </form>

    

    <p>Need an account? <a href="/signup">Signup</a></p>
    <p>Or go <a href="/">home</a>.</p>

</div>

</div>
</body>
</html>
