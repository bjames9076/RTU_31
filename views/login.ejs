<!doctype html>
<html>
<head>
    <title>Right to You!</title>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">


</head>
<body class="grey">
<div class="container main">

<div class="row">
    <div class="col s6 offset-s3 borderclass grey darken-1 z-depth-5">
    <h1 class="center-align thin white-text"><span class="fa fa-sign-in"></span> Login</h1>

    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="red-text center-align"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/login" method="post">
        <div class="form-group">
            <label class="white-text thin">Email</label>
            <input placeholder="example@example.com" type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label class="white-text thin">Password</label>
            <input placeholder="..."type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn center-align grey darken-3 thin">Login</button>
    </form>

    

    <p class="white-text">Need an account? <a href="/signup" class="pink-text">Signup</a></p>
    <p class="white-text">Or go <a href="/" class="pink-text">home</a>.</p>

</div>

</div>
</div>
<footer class="page-footer">
    <div class="center-align">
